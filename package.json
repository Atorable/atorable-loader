{
    "name": "@atorable/atorable-loader",
    "publishConfig": {
        "@atorable:registry": "https://gitlab.com/api/v4/projects/33999186/packages/npm/"
    },
    "version": "0.1.0",
    "description": "Webpack loader for turning files into Magnet links",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "source": "src/index.ts",
    "files": [
        "lib/**/*"
    ],
    "scripts": {
        "test": "jest --coverage",
        "lint": "eslint . --ext .ts",
        "clean-lib": "rimraf lib/*",
        "build": "npm run clean-lib && npx tsc --project tsconfig.json",
        "prettier-watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
        "prepare": "npm run build",
        "prepublishOnly-": "npm test && npm run lint",
        "preversion-": "npm run lint"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Atorable/atorable-loader"
    },
    "keywords": [
        "webtorrent",
        "react",
        "webpack",
        "tor",
        "img",
        "video",
        "loader"
    ],
    "dependencies": {
        "create-torrent": "^5.0.1",
        "form-data": "^4.0.0",
        "loader-utils": "^3.2.0",
        "node-fetch": "^2.6.6",
        "parse-torrent": "^9.1.4",
        "uuid-apikey": "^1.5.3"
    },
    "devDependencies": {
        "@types/create-torrent": "^5.0.0",
        "@types/jest": "^27.4.1",
        "@types/loader-utils": "^2.0.3",
        "@types/node": "^16.11.12",
        "@types/node-fetch": "^2.5.12",
        "@types/parse-torrent": "^5.8.4",
        "@typescript-eslint/eslint-plugin": "^5.9.0",
        "@typescript-eslint/parser": "^5.9.0",
        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.0.0",
        "prettier": "2.5.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.1.4",
        "typescript": "^4.6.4"
    },
    "author": {
        "name": "Atorable",
        "email": "serge@atorable.com",
        "url": "https://atorable.github.io/atorable-react/"
    },
    "license": "ISC",
